{
  "crons": [
    {
      "path": "/api/cron/scheduled-posts",
      "schedule": "*/5 * * * *"
    }
  ],
  "functions": {
    "src/app/api/cron/scheduled-posts/route.ts": {
      "maxDuration": 60
    },
    "src/app/api/marketing/posts/route.ts": {
      "maxDuration": 30
    },
    "src/app/api/marketing/publish/route.ts": {
      "maxDuration": 30
    }
  },
  "env": {
    "CRON_SECRET": "@cron-secret"
  }
}